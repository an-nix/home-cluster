---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: rsyslog
  namespace: infrastructure
spec:
  replicas: 1
  selector:
    matchLabels:
      app: rsyslog
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: rsyslog
      annotations:
        prometheus.io/scrape: "false"
    spec:
      nodeSelector:
        zone: datacenter
      containers:
      - name: rsyslog
        image: mebaxyz/rsyslog-server:latest
        imagePullPolicy: Always
        readinessProbe:
          tcpSocket:
            port: tcp
          timeoutSeconds: 30
        livenessProbe:
          tcpSocket:
            port: tcp
          timeoutSeconds: 60
          failureThreshold: 5
        resources:
          requests:
            cpu: 50m
            memory: 32Mi
          limits:
            cpu: 50m
            memory: 32Mi
        ports:
        - containerPort: 514
          name: udp
          protocol: UDP
        - containerPort: 514
          name: tcp
          protocol: TCP
